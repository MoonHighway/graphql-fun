{
  "name": "graphql-fun",
  "version": "0.1.0",
  "license": "MIT",
  "dependencies": {
    "apollo-boost": "^0.1.12",
    "apollo-cache-persist": "^0.1.1",
    "apollo-link-ws": "^1.0.8",
    "apollo-server": "^2.0.0",
    "apollo-server-express": "^2.0.0",
    "apollo-utilities": "^1.0.17",
    "color": "^3.0.0",
    "express": "^4.16.3",
    "faker": "^4.1.0",
    "graphql": "^0.13.2",
    "graphql-playground-middleware-express": "1.5.7",
    "html-colors": "^0.0.4",
    "node-fetch": "^2.2.0",
    "react": "^16.4.1",
    "react-apollo": "^2.1.9",
    "react-dom": "^16.4.1",
    "react-icons": "3.0.5",
    "react-router-dom": "^4.3.1",
    "react-scripts": "1.1.4",
    "react-spinners": "^0.3.3",
    "styled-components": "^3.4.0"
  },
  "scripts": {
    "build:api": "webpack -p --config api.webpack.config.js",
    "build:client": "react-scripts build",
    "prestart": "yarn build:api; yarn build:client",
    "start": "node -r dotenv/config . dotenv_config_path=.env.production.local",
    "dev:api": "PORT=4000 nodemon -r dotenv/config . dotenv_config_path=.env.development.local --watch ./index.js",
    "watch:api": "webpack --watch --config api.webpack.config.js --mode development",
    "start:dev": "concurrently \"yarn dev:api\" \"yarn watch:api\" \"react-scripts start\"",
    "pretest": "yarn build:api; yarn build:client",
    "test": "react-scripts test --env=jsdom --coverage",
    "posttest": "yarn test:functional",
    "test:functional": "cucumber-js",
    "coverage": "open ./coverage/lcov-report/index.html",
    "presimulator:dev": "clear",
    "simulator:dev": "nodemon ./simulator",
    "simulator": "node ./simulator",
    "eject": "react-scripts eject"
  },
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-0": "^6.24.1",
    "chai": "^4.1.2",
    "concurrently": "^3.6.1",
    "cucumber": "^4.2.1",
    "graphql-request": "^1.7.0",
    "nodemon": "^1.18.3",
    "puppeteer": "^1.6.2",
    "webpack": "^4.16.3",
    "webpack-cli": "^3.1.0",
    "webpack-graphql-loader": "^1.0.0",
    "webpack-node-externals": "^1.7.2"
  }
}
